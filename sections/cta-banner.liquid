{% schema %}
{
  "name": "Reliable Packing CTA",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Searching for reliable packing supply solutions in Canada?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Built for businesses that depend on consistent, large-volume supply."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Browse all Categories"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#139D72"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Reliable Packing CTA"
    }
  ]
}
{% endschema %}

{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Rethink+Sans:ital,wght@0,400..800;1,400..800&display=swap');

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    position: relative;
    z-index: 10;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .cta-banner-container {
    max-width: 1588px; /* Matched to eco-friendly 1588px alignment requirement from prev context, but typically 1340px is inner content. Using 1340px for inner as per eco spec in current file view */
    margin: 0 auto;
    padding: 0 20px;
    box-sizing: border-box;
    font-family: 'Rethink Sans', sans-serif;
  }

  .cta-banner-wrapper {
    background-color: {{ section.settings.bg_color }};
    border-radius: 28.3347px;
    padding: 48px 64px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 40px;
    color: {{ section.settings.text_color }};
    width: 100%;
    max-width: 1340px; /* Inner width match */
    margin: 0 auto;
    box-sizing: border-box;
    min-height: 220px;
  }

  .cta-banner-content {
    flex: 1;
    max-width: 800px;
  }

  .cta-banner-heading {
    font-family: 'Rethink Sans', sans-serif;
    font-size: 40px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 16px 0;
    color: inherit;
  }

  .cta-banner-description {
    font-family: 'Rethink Sans', sans-serif;
    font-size: 18px;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.9); /* Slightly transparent white for description */
    margin: 0;
  }

  .cta-banner-btn {
    background-color: #FFFFFF;
    color: #000000;
    padding: 16px 32px;
    border-radius: 100px;
    font-family: 'Rethink Sans', sans-serif;
    font-size: 16px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }

  .cta-banner-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0,0,0,0.15);
    opacity: 0.95;
  }

  @media screen and (max-width: 990px) {
    .cta-banner-wrapper {
      flex-direction: column;
      align-items: flex-start;
      padding: 40px 32px;
      text-align: left;
      border-radius: 20px;
    }

    .cta-banner-content {
      max-width: 100%;
      margin-bottom: 32px;
    }

    .cta-banner-heading {
      font-size: 32px;
    }
    
    .cta-banner-btn {
      width: 100%;
    }
  }

  @media screen and (max-width: 480px) {
    .cta-banner-wrapper {
        padding: 32px 24px;
    }

    .cta-banner-heading {
      font-size: 26px;
    }

    .cta-banner-description {
      font-size: 16px;
    }
  }
{% endstyle %}

<div class="section-{{ section.id }}-padding">
  <div class="cta-banner-container">
    <div class="cta-banner-wrapper">
      <div class="cta-banner-content">
        {%- if section.settings.heading != blank -%}
          <h2 class="cta-banner-heading">{{ section.settings.heading | escape }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="cta-banner-description">{{ section.settings.description | escape }}</p>
        {%- endif -%}
      </div>
      
      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link | default: '#' }}" class="cta-banner-btn">
          {{ section.settings.button_text | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>
