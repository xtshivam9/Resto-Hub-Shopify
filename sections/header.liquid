            <path d="M1.22949 1.2294H6.14713L9.44194 17.6912C9.55436 18.2572 9.86228 18.7656 10.3118 19.1275C10.7613 19.4894 11.3238 19.6816 11.9008 19.6705H23.8506C24.4276 19.6816 24.99 19.4894 25.4396 19.1275C25.8891 18.7656 26.197 18.2572 26.3094 17.6912L28.2765 7.37645H7.37653" stroke="#149B77" stroke-width="2.45882" stroke-linecap="round" stroke-linejoin="round"/>
          </g>
          <defs>
            <clipPath id="clip0_56_261">
              <rect width="29.5058" height="29.5058" fill="white"/>
            </clipPath>
          </defs>
        </svg>
      </a>
    {%- endif -%}
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 40,
      "max": 300,
      "step": 10,
      "default": 80,
      "unit": "px",
      "label": "Logo width"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Menu"
    },
    {
      "type": "header",
      "content": "Icons"
    },
    {
      "type": "checkbox",
      "id": "show_user_icon",
      "default": true,
      "label": "Show user icon"
    },
    {
      "type": "checkbox",
      "id": "show_cart_icon",
      "default": true,
      "label": "Show cart icon"
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
