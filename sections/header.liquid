{% comment %} sections/header.liquid {% endcomment %}

{{ 'header.css' | asset_url | stylesheet_tag }}

<header class="header-wrapper">
  {% comment %} Left: Logo {% endcomment %}
  <div class="header-left">
    <a href="{{ routes.root_url }}" class="header-logo">
      {%- if section.settings.logo != blank -%}
        {{ section.settings.logo | image_url: width: section.settings.logo_width | image_tag: loading: 'eager', alt: shop.name }}
      {%- else -%}
        <img src="{{ 'templogo.svg' | asset_url }}" alt="{{ shop.name }}" width="{{ section.settings.logo_width }}" height="auto">
      {%- endif -%}
    </a>
  </div>

  {% comment %} Middle: Menu {% endcomment %}
  <div class="header-center">
    {%- if section.settings.menu != blank -%}
      <nav class="header-navigation">
        <ul class="header-menu">
          {%- assign menu_links = "Shop All,Categories,Most Popular,New Arrivals,Why Resto Supply Hub,About,Contact" | split: ',' -%}
          {%- for title in menu_links -%}
            <li class="header-menu-item">
              <a href="#" class="header-menu-link">
                {{ title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </nav>
    {%- endif -%}
  </div>

  {% comment %} Right: Icons {% endcomment %}
  <div class="header-right">
    {%- if section.settings.show_user_icon -%}
      <a href="{{ routes.account_url }}" class="header-icon header-icon--account">
        <svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M24.5856 25.8176V23.3588C24.5856 22.0545 24.0675 20.8037 23.1452 19.8815C22.223 18.9592 20.9722 18.4411 19.6679 18.4411H9.83267C8.52843 18.4411 7.27762 18.9592 6.35538 19.8815C5.43315 20.8037 4.91504 22.0545 4.91504 23.3588V25.8176" stroke="#149B77" stroke-width="2.45882" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M14.7545 13.5235C17.4705 13.5235 19.6722 11.3218 19.6722 8.60586C19.6722 5.88992 17.4705 3.68822 14.7545 3.68822C12.0386 3.68822 9.83691 5.88992 9.83691 8.60586C9.83691 11.3218 12.0386 13.5235 14.7545 13.5235Z" stroke="#149B77" stroke-width="2.45882" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    {%- endif -%}

    {%- if section.settings.show_cart_icon -%}
      <a href="{{ routes.cart_url }}" class="header-icon header-icon--cart" id="cart-icon-bubble">
        <svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
          <g clip-path="url(#clip0_56_261)">
            <path d="M11.0673 27.047C11.7463 27.047 12.2967 26.4966 12.2967 25.8176C12.2967 25.1386 11.7463 24.5882 11.0673 24.5882C10.3883 24.5882 9.83789 25.1386 9.83789 25.8176C9.83789 26.4966 10.3883 27.047 11.0673 27.047Z" stroke="#149B77" stroke-width="2.45882" stroke-linecap="round" stroke-linejoin="round"/>
