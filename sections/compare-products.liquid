{% schema %}
{
  "name": "Compare Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Compare Products"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Compare Products",
      "blocks": [
        {
          "type": "product_card"
        },
        {
          "type": "product_card"
        },
        {
           "type": "product_card"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="compare-products-section">
  <h2>{{ section.settings.heading }}</h2>
  <div class="compare-grid">
    {% for block in section.blocks %}
      <div class="compare-item">
        {% assign product = all_products[block.settings.product] %}
        {% if product != blank %}
             {% render 'product-card', product_card_product: product %}
        {% else %}
             {{ 'product-1' | placeholder_svg_tag }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .compare-products-section {
    padding: 60px 0;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }
  .compare-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 40px;
  }
</style>
