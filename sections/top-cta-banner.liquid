{% schema %}
{
  "name": "Top CTA Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Searching for reliable packing supply solutions in Canada?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Built for businesses that depend on consistent, large-volume supply."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Browse all Categories"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#239A71"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Top CTA Banner"
    }
  ]
}
{% endschema %}

{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Rethink+Sans:ital,wght@0,400..800;1,400..800&display=swap');

  .top-cta-container {
    max-width: 1340px;
    margin: 20px auto; 
    padding: 0;
    position: relative;
    z-index: 10;
    font-family: 'Rethink Sans', sans-serif;
  }

  .top-cta-wrapper {
    background-color: {{ section.settings.bg_color }};
    border-radius: 28px;
    padding: 50px 60px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 40px;
    color: {{ section.settings.text_color }};
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .top-cta-content {
    flex: 1;
  }

  .top-cta-heading {
    font-family: 'Rethink Sans', sans-serif;
    font-size: 40px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
    color: inherit;
  }

  .top-cta-description {
    font-family: 'Rethink Sans', sans-serif;
    font-size: 18px;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }

  .top-cta-button {
    background-color: #ffffff;
    color: #000000;
    padding: 16px 32px;
    border-radius: 100px;
    font-family: 'Rethink Sans', sans-serif;
    font-size: 16px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
    display: inline-block;
  }

  .top-cta-button:hover {
      opacity: 0.9;
      transform: translateY(-2px);
  }

  @media screen and (max-width: 990px) {
      .top-cta-container {
          padding: 0 20px;
          margin: 10px auto;
      }
      .top-cta-wrapper {
          padding: 40px;
          flex-direction: column;
          align-items: flex-start;
          text-align: left;
      }
      .top-cta-heading {
          font-size: 32px;
      }
       .top-cta-button {
          width: 100%;
          text-align: center;
      }
  }

  @media screen and (max-width: 768px) {
    .top-cta-container {
        padding: 0 16px;
    }

    .top-cta-wrapper {
        padding: 30px 20px;
        gap: 24px;
    }

    .top-cta-heading {
        font-size: 24px;
    }

    .top-cta-description {
        font-size: 15px;
    }

    .top-cta-button {
        padding: 14px 24px;
        font-size: 14px;
    }
  }

  @media screen and (max-width: 480px) {
    .top-cta-heading {
        font-size: 22px;
    }

    .top-cta-description {
        font-size: 14px;
    }
  }
{% endstyle %}

<div class="top-cta-section">
    {%- if section.settings.heading != blank -%}
    <div class="top-cta-container">
        <div class="top-cta-wrapper">
            <div class="top-cta-content">
                <h2 class="top-cta-heading">{{ section.settings.heading | escape }}</h2>
                {%- if section.settings.description != blank -%}
                <p class="top-cta-description">{{ section.settings.description | escape }}</p>
                {%- endif -%}
            </div>
            {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link | default: '#' }}" class="top-cta-button">
                {{ section.settings.button_label | escape }}
            </a>
            {%- endif -%}
        </div>
    </div>
    {%- endif -%}
</div>
